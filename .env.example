# Database Connection
DATABASE_URL=postgres://postgres:postgres@localhost:5432/tsk_app

# Session secret (change this to a random string)
SESSION_SECRET=change_this_to_a_random_secure_string

# Blockchain Deployment
# Private key of the deployer wallet (without 0x prefix)
DEPLOYER_PRIVATE_KEY=your_private_key_here

# BSCScan API key for contract verification
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Contract addresses (will be populated after deployment)
TSK_TOKEN_ADDRESS_TESTNET=0x0000000000000000000000000000000000000000
TSK_TOKEN_ADDRESS_MAINNET=0x0000000000000000000000000000000000000000

# Network configuration
# Set to 'testnet' for development, 'mainnet' for production
CURRENT_NETWORK=testnet

# Node provider URLs (optional, defaults are provided in hardhat.config.js)
# BSC_TESTNET_URL=https://data-seed-prebsc-1-s1.binance.org:8545
# BSC_MAINNET_URL=https://bsc-dataseed.binance.org

# Google Cloud Storage Configuration (required for cloud storage)
# GOOGLE_CLOUD_PROJECT_ID=your_project_id
# GOOGLE_CLOUD_CREDENTIALS={"type":"service_account","project_id":"..."}
# GOOGLE_CLOUD_BUCKET_NAME=tsk-platform-storage

# OpenAI API Key for AI assistant enhancement (optional but recommended)
# OPENAI_API_KEY=your_openai_api_key_here

# Email service configuration (required for password reset)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_username
# SMTP_PASSWORD=your_smtp_password
# FROM_EMAIL=noreply@yourapp.com
# FROM_NAME=Your App Name
